@page
@model ballad_to_food.Pages.ContactModel

<form method="post">

    <input type="hidden"  />
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" placeholder="enter your name"/>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control" placeholder="something@whatever.com"/>
    </div>
    <div class="form-group">
        <label>Message</label>
        <textarea class="form-control" placeholder="say something ..."></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
